<div style="float:right;">Don't have an account? you can 
  <%= link_to "sign up here.", new_user_path %>
</div>
<br />
<div id="mainTtl">
  <h1 style="font-size:36px; font-weight:bold; color:#01485b; font-style:normal;">Sign In</h1>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('input#password').addClass('txtFld');
    $('input#login').addClass('txtFld');
  });
</script>

<div id="containerForm">

<% unless flash[:error].blank? %>
<div class="error"> <%=  flash[:error] %></div>
<% end %>

<div class="signInLeft">
  
<% form_tag session_path do %>
<table width="100%" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td colspan="2" class="titleTd"><h3>Basic Information</h3></td>
    </tr>
  <tr>
    <td class="labelTd">Login</td>
    <td><%= text_field_tag 'login' %></td>
  </tr>
  <tr>
    <td class="labelTd">Password</td>
    <td><%= password_field_tag 'password' %></td>
  </tr>
  <tr>
    <td colspan="2"><input type="checkbox" /> Keep me Logged in to this computer</td>
    </tr>
  <tr>
    <td colspan="2"><input type="image" src="/images/buttons/signin-btn.jpg" class="inputBtn" /> <a href="#">Forgot Password</a></td>
    </tr>
</table>
<% end %>

</div>
<div class="signInSep"><img src="/images/backgrounds/signin-form-bg.jpg" /></div>
<div class="signInRight">
<h3>Why Create Account</h3>
<p><strong>Find</strong> dream Cars, Bikes offered by hundreds of Car owners and agents.</p>
<p><strong>Post</strong> your Car Ad to get it sold out in no time.</p>
<p><strong>Save</strong> your favorite Car ads, news or agents in one place.</p>
<h4>Don't have an account?</h4>
<p class="jointBtnP">
  <%= link_to '<img src="/images/buttons/join-btn.jpg" alt="Join DuWheels" />', new_user_path %>
</p>
</div>
</div>
