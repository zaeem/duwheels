<h1>Listing makes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>No. of models</th>
  </tr>

<% @makes.each do |make| %>
  <tr>
    <td><%=h make.name %></td>
    <td><%=h make.car_models.size %></td>
    <td><%= link_to 'Show', make %></td>
    <td><%= link_to 'Edit', edit_make_path(make) %></td>
    <td><%= link_to 'Destroy', make, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New make', new_make_path %>